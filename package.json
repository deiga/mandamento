{
  "name": "mandamento",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run index.ts",
    "db:start": "docker run -d --name mandamento-postgres -e POSTGRES_PASSWORD=secret_mandamento_password -v $(pwd)/data/:/var/lib/postgresql/data -p 5432:5432 postgres",
    "db:stop": "docker stop --name mandamento-postgres",
    "build": "bun build",
    "test": "bun test",
    "lint": "bun biome check --diagnostic-level=error --files-ignore-unknown=true --no-errors-on-unmatched --log-level=error --max-diagnostics=10000",
    "lint:format:fix": "bun biome format --files-ignore-unknown=true --no-errors-on-unmatched --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
